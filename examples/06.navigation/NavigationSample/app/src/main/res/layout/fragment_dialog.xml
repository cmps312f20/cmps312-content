<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    tools:context=".DialogFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/alertDialogBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Show alert dialog"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="95dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/simpleDialogBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Show simple dialog"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="88dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/singleChoiceConfirmationDialogBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Show single-choice confirmation dialog"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="250dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/multiChoiceConfirmationDialogBtn"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Show multi-choice confirmation dialog"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="387dp" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:constraint_referenced_ids="alertDialogBtn,simpleDialogBtn,singleChoiceConfirmationDialogBtn,multiChoiceConfirmationDialogBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>